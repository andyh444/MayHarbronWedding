body {
  background-color: rgb(255,255,255);
  font-family: Rubik, Arial;
  text-align: center;
}

h1 {
	font-family: "Lucida Handwriting";
	font-size: 64px;
	color: #887694 /* dusty purple */
}

h2 {
	font-family: "Lucida Handwriting";
	font-size: 32px;
	color: #887694 /* dusty purple */
}

td {
	text-align: left;
	margin: 10px;
	padding: 10px;
}


.menubox {
	margin-left: 20px;
	margin-right: 20px;
	
	vertical-align: top;
	display: inline-block;
	text-align: left;
	width: 20%;
	min-width: 128px;
}

.starthidden {
	display: none;
}

.mainbody {
	margin: 5%;
}

.border {
	border-style: solid;
	border-width: 1px;
	border-color: black;
}

.bottomborder {
	border-bottom-style: solid;
	border-width: 1px;
	border-color: black;
	margin: 2%;
	padding: 5%;
}

.address {
	border-style: solid;
	border-width: 1px;
	border-color: black;
	border-radius: 64px;
	vertical-align: middle;
	display: inline-block;
	padding: 40px;
	margin: 16px;
}

.venueimage {
	width: 100%;
}


.venueimagecontainer {
	position: relative;
	display: inline-block;
	width: 25%;
	min-width:160px;
}

.imagetext {
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	opacity: 0%;
	font-size:1px;
}

.directions {
	border-style: solid;
	border-width: 1px;
	border-color: black;
	border-radius: 32px;
}