body {
  background-color: rgb(50,50,50);
}

@font-face {
    font-family: permanentMarker;
    src: url(PermanentMarker-x99j.ttf);
}

.polaroidgroup {
	display: grid;
	place-items: center;
	position: relative;
	width:50%;
}



.polaroid:nth-child(1) {
	left:40%;
	bottom:20px;
	transform: rotate(-3deg);
	width: 180px;
}

.polaroid:nth-child(2) {
	left:50%;
	transform: rotate(5deg);
	width: 200px;
}

.polaroid:nth-child(3) {
	left:60%;
	bottom:50px;
	transform: rotate(-12deg);
	width: 160px;
}

.polaroid {
	aspect-ratio: 5/7;
	box-shadow: 10px 10px 5px rgba(0,0,0,0.5), 0 0 1px rgba(0,0,0,0.5);
	background-color:white;
	border-radius:3px;
	position:absolute;
	top: 200px;
	transition: transform 250ms, left 1s;
	transition-timing-function: cubic-bezier(0.33,0.2,0.66,0.8), ease-out; /* symmetrical, to work well with the opacity curve of the image/back */
	/*transition-timing-function: linear;*/
	/*background-image:url('Images\\AndyAndMolly1.jpg');
	background-repeat: no-repeat;
	background-size: 80% 55%;
	background-position: 20px 24px;*/
	z-index:-1;
}

.polaroidimage, .polaroidimagecover {
	width: 100%;
	height: 100%;
	position:absolute;
}

.polaroidimagecover {
	background-color:black;
	transition: opacity 3s;
	transition-timing-function: ease-in;
}

.polaroidimagecontainer, .polaroidbackcontainer {
	transition: opacity 250ms;
	transition-timing-function: cubic-bezier(1,0,0,1); /* get this as close to a step as possible */
}

.polaroidcontainer {
	width: 100%;
	height: 100%;
	position: relative;
}

.polaroidimagecontainer {
	width: 80%;
	height: 55%;
	/*transform: translate(20px, 24px);*/
	left:50%;
	top:10%;
	transform: translate(-50%, 0);
	position:absolute;
}

.polaroidbackcontainer {
	width:100%;
	height:100%;
	position:absolute;
	opacity: 0;
}

.polaroidback {
	font-family: permanentMarker;
	font-size: 18px;
	color: rgba(81,44,107,0.8);
	position:absolute;
	top:50%;
	transform: translate(10%, -50%) rotate(30deg) scale(-1, 1);
}

/*.polaroid:hover {
	transform: rotate(0deg) scale(1.5, 1.5);
	z-index:999;
}*/

.polaroidFlipTransition {
	transform: rotate(0deg) scale(1.5, 1.5);
}

.polaroidFlipAnimation {
	animation: polaroidClick;
	animation-iteration-count: 1;
	animation-duration: 2500ms;
	animation-fill-mode: both;
}

.polaroidFlipBackAnimation {
	animation: polaroidUnClick;
	animation-iteration-count: 1;
	animation-duration: 2500ms;
	animation-fill-mode: both;
}

@keyframes polaroidClick {


	100% {
		transform: rotate(0deg) scale(-1.5, 1.5);
		box-shadow: -10px 10px 5px rgba(0,0,0,0.5), 0 0 1px rgba(0,0,0,0.5);
		background-image: none;
	}
}

@keyframes polaroidUnClick {
	0% {
		background-image: none;
	}

	50% {
		transform: rotate(0deg) scale(0, 1.5);
	}

	100% {
		transform: rotate(0deg) scale(1.5);
	}
}